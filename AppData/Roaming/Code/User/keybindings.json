[
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // This is modeled to resemble my workflow on Arch Linux as close as possible (i3wm + alacritty + neovim).
    // See original configuration for more context:
    // - https://github.com/ddnomad/dotfiles/blob/master/dot_config/i3/config.tmpl
    // - https://github.com/ddnomad/dotfiles/blob/master/dot_config/alacritty/alacritty.yml.tmpl
    // - https://github.com/ddnomad/dotfiles/blob/master/dot_config/nvim/init.vim.tmpl
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Opening things
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    { "key": "alt+d", "command": "workbench.action.showCommands"},
    { "key": "alt+enter", "command": "workbench.action.terminal.toggleTerminal", "when": "editorFocus" },
    { "key": "alt+enter", "command": "workbench.action.terminal.split", "when": "terminalFocus" },
    { "key": "alt+enter", "command": "workbench.action.terminal.split", "when": "terminalFocus" },
    { "key": "alt+shift+enter", "command": "workbench.action.terminal.new", "when": "terminalFocus" },

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Closing things
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    { "key": "ctrl+q", "command": "workbench.action.closeActiveEditor"},
    { "key": "ctrl+q", "command": "workbench.action.terminal.kill", "when": "terminalFocus" },

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Toggling things
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    { "key": "tab", "command": "workbench.action.toggleSidebarVisibility", "when": "vim.mode == 'Normal'"},

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Navigating between things
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Navigate between root level UI elements (tab groups, terminal window, explorer etc.)
    // "${DEITY}" bless this person: https://stackoverflow.com/a/50593160/3272592
    { "key": "alt+h", "command": "workbench.action.navigateLeft" },
    { "key": "alt+l", "command": "workbench.action.navigateRight" },
    { "key": "alt+k", "command": "workbench.action.navigateUp" },
    { "key": "alt+j", "command": "workbench.action.navigateDown" },

    // Navigate between integrated terminal splits in the same way as between root UI elements
    { "key": "alt+j", "command": "workbench.action.terminal.focusNextPane", "when": "terminalFocus && panelPosition == 'right'"},
    { "key": "alt+k", "command": "workbench.action.terminal.focusPreviousPane", "when": "terminalFocus && panelPosition == 'right'"},
    { "key": "alt+l", "command": "workbench.action.terminal.focusNextPane", "when": "terminalFocus && panelPosition == 'bottom'"},
    { "key": "alt+h", "command": "workbench.action.terminal.focusPreviousPane", "when": "terminalFocus && panelPosition == 'bottom'"},

    // Cycle between editors (tabs) in a single tab group
    { "key": "ctrl+j", "command": "workbench.action.nextEditor" },
    { "key": "ctrl+k", "command": "workbench.action.previousEditor", },

    // Cycle between sidebar panes
    { "key": "alt+1", "command": "workbench.view.explorer", "when": "sideBarFocus" },
    { "key": "alt+2", "command": "workbench.view.search.focus", "when": "sideBarFocus" },
    { "key": "alt+3", "command": "workbench.view.scm", "when": "sideBarFocus" },
    { "key": "alt+4", "command": "workbench.view.debug", "when": "sideBarFocus" },
    { "key": "alt+5", "command": "sshHosts.focus", "when": "sideBarFocus" },
    { "key": "alt+6", "command": "workbench.view.extensions", "when": "sideBarFocus" },
    { "key": "alt+7", "command": "workbench.view.extension.test", "when": "sideBarFocus" },
    { "key": "alt+8", "command": "", "when": "sideBarFocus" },
    { "key": "alt+9", "command": "", "when": "sideBarFocus" },

    // Cycle between terminal tabs
    { "key": "ctrl+j", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus" },
    { "key": "ctrl+k", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus" },

    // FIXME: Instead use to switch between problems / output etc.
    // Switching between problems, output, terminal etc. tabs
    { "key": "alt+1", "command": "workbench.action.problems.focus", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+2", "command": "workbench.panel.output.focus", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+3", "command": "workbench.action.terminal.focus", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+4", "command": "~remote.forwardedPorts.focus", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+5", "command": "workbench.panel.repl.view.focus", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+6", "command": "", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+7", "command": "", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+8", "command": "", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },
    { "key": "alt+9", "command": "", "when": "activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == '~remote.forwardedPortsContainer' || problemFocus || terminalFocus" },

    // Navigation between items in command palette
    { "key": "ctrl+n", "command": "workbench.action.quickOpenSelectNext", "when": "inQuickOpen" },
    { "key": "ctrl+p", "command": "workbench.action.quickOpenSelectPrevious", "when": "inQuickOpen" },

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Moving things around
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    { "key": "alt+shift+h", "command": "workbench.action.moveEditorToPreviousGroup", "when": "editorFocus"},
    { "key": "alt+shift+j", "command": "workbench.action.moveEditorRightInGroup", "when": "editorFocus"},
    { "key": "alt+shift+k", "command": "workbench.action.moveEditorLeftInGroup", "when": "editorFocus"},
    { "key": "alt+shift+l", "command": "workbench.action.moveEditorToNextGroup", "when": "editorFocus"},

    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Resizing things
    /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    { "key": "alt+ctrl+h", "command": "workbench.action.decreaseViewSize" },
    { "key": "alt+ctrl+l", "command": "workbench.action.increaseViewSize" },
]
