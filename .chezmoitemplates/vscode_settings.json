{
	"autoDocstring.docstringFormat": "sphinx",
	"breadcrumbs.enabled": false,

	"customizeUI.activityBar": "bottom",
	"customizeUI.activityBarHideSettings": true,
	"customizeUI.listRowHeight": 20,
	"customizeUI.stylesheet": {
		"#workbench\\.parts\\.titlebar > a": "display: none !important;",
		".scrollbar": "height: 0 !important; width: 0 !important;",
		".tabs-container .tab.active": "font-weight: bold;",
		".monaco-icon-label:after": "opacity: 1.0 !important;"
	},

	"editor.autoClosingBrackets": "never",
	"editor.autoClosingDelete": "never",
	"editor.autoClosingQuotes": "never",
	"editor.cursorStyle": "underline",
	"editor.fontSize": 12,
	"editor.fontFamily": "Hack Nerd Font Mono",
	"editor.hideCursorInOverviewRuler": true,
	"editor.lineNumbers": "relative",
	"editor.minimap.enabled": false,
	"editor.overviewRulerBorder": false,
	"editor.renderWhitespace": "boundary",
	"editor.scrollBeyondLastLine": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.horizontalScrollbarSize": 0,
	"editor.scrollbar.vertical": "hidden",
	"editor.scrollbar.verticalScrollbarSize": 0,
	"editor.tabCompletion": "on",
	"editor.unicodeHighlight.allowedCharacters": {
		"?": true
	},
	"editor.wordWrap": "on",

	"errorLens.messageTemplate": "? $source: $message ($count)",
	"errorLens.gutterIconsEnabled": true,
	"errorLens.gutterIconSet": "circle",
	"errorLens.gutterIconSize": "81%",
	"errorLens.errorGutterIconColor": "#AB4642",
	"errorLens.fontStyleItalic": true,
	"errorLens.fontSize": "12",
	"errorLens.infoGutterIconColor": "#86C1B9",
	"errorLens.warningGutterIconColor": "#F7CA88",

  "eslint.validate": [ "javascript", "javascriptreact", "html", "typescriptreact" ],

	"files.autoSave": "afterDelay",
	"files.exclude": { "*.pyc": true },

	"git.decorations.enabled": false,

	"python.analysis.typeCheckingMode": "basic",

	"python.linting.flake8Enabled": true,
	"python.linting.lintOnSave": true,
	"python.linting.pycodestyleEnabled": true,
	"python.linting.pydocstyleEnabled": true,
	"python.linting.pylamaEnabled": true,
	"python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--rcfile=setup.cfg"],

  "redhat.telemetry.enabled": false,

	"terminal.external.linuxExec": "alacritty",
	"terminal.external.osxExec": "Alacritty.app",
	"terminal.external.windowsExec": "C:\\Windows\\System32\\WindowsPowershell\\v1.0\\powershell.exe",
	"terminal.integrated.fontFamily": "Hack Nerd Font Mono",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.localEchoExcludePrograms": [ "vim", "vi", "nano", "tmux", "nvim" ],
	"terminal.integrated.commandsToSkipShell": [
		"~remote.forwardedPorts.focus",
		"workbench.action.problems.focus",
		"workbench.panel.output.focus",
		"workbench.panel.repl.view.focus"
	],
	"terminal.integrated.shell.osx": "/opt/homebrew/bin/bash",
	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.shellIntegration.enabled": false,

	"vim.cursorStylePerMode.insert": "underline",
	"vim.cursorStylePerMode.normal": "underline",
	"vim.cursorStylePerMode.replace": "underline",
	"vim.cursorStylePerMode.visual": "underline",
	"vim.cursorStylePerMode.visualblock": "underline",
	"vim.cursorStylePerMode.visualline": "underline",
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,

	"window.customMenuBarAltFocus": false,
	"window.titleBarStyle": "custom",

	"workbench.colorCustomizations": {
		"editorGroupHeader.tabsBackground": "#181818",
		"editorIndentGuide.background": "#282828",
		"editorIndentGuide.activeBackground": "#585858",
		"errorLens.errorBackground": "#AB464211",
		"errorLens.errorForeground": "#AB4642",
		"errorLens.infoBackground": "#86C1B911",
		"errorLens.infoForeground": "#86C1B9",
		"errorLens.warningBackground": "#F7CA8811",
		"errorLens.warningForeground": "#F7CA88",
		"focusBorder":"#282828",
		"list.activeSelectionBackground": "#282828",
		"list.focusBackground": "#282828",
		"list.hoverBackground": "#282828",
		"list.inactiveFocusBackground": "#FF000000",
		"list.inactiveSelectionBackground": "#282828",
		"pickerGroup.border": "#3D3D3D",
		"quickInput.background": "#282828",
		"quickInputList.focusBackground": "#383838",
		"selection.background": "#585858",
		"sideBar.background": "#181818",
		"sideBar.border": "#3D3D3D",
		"sideBarSectionHeader.background": "#181818",
		"sideBarSectionHeader.border": "#3D3D3D",
		"statusBar.background": "#282828",
		"statusBarItem.remoteBackground": "#282828",
		"symbolIcon.objectForeground": "#BA8BAF",
		"tab.activeBackground": "#282828",
		"tab.activeForeground": "#D8D8D8",
		"tab.border": "#FF000000",
		"tab.hoverBackground": "#282828",
		"tab.hoverForeground": "#D8D8D8",
		"tab.inactiveBackground": "#181818",
		"tab.inactiveForeground": "#D8D8D8",
		"tab.unfocusedHoverBackground": "#282828",
		"tab.unfocusedHoverForeground": "#D8D8D8",
		"tree.indentGuidesStroke": "#383838"
	},
	"workbench.colorTheme": "Base16 Default Dark",

	"workbench.editor.closeEmptyGroups": true,
	"workbench.editor.decorations.colors": false,
	"workbench.editor.decorations.badges": true,
	"workbench.editor.enablePreview": true,
	"workbench.editor.enablePreviewFromQuickOpen": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabSizing": "shrink",
	"workbench.panel.defaultLocation": "right",
	"workbench.tree.indent": 16,
}

